---
import Container from "./Container.astro"

---

<div id="team">
  <Container>
      <div class="mb-12 space-y-2 text-center">
        <h2 class="text-3xl font-bold text-gray-800 md:text-4xl dark:text-white">Meet Our Team</h2>

      </div>
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        <div class="group p-6 sm:p-8 rounded-3xl bg-white border border-gray-100 dark:shadow-none dark:border-gray-700 dark:bg-gray-800 bg-opacity-50 shadow-2xl shadow-gray-600/10">
          <div class="relative overflow-hidden rounded-xl">
            <img src="/images/mephoto.jpg"
            alt="art cover" loading="lazy" width="1000" height="667" class="h-72 w-full object-cover object-top transition duration-500 group-hover:scale-105"/>
          </div>
          <div class="mt-6 relative">
            <h3 class="text-2xl font-semibold text-gray-800 dark:text-white">
              Jeet Bhatkar
            </h3>
            <p class="mt-6 mb-8 text-gray-600 dark:text-gray-300">
              CEO
            </p>
            <a target = "_blank" class="inline-block" href="https://www.linkedin.com/in/jeetbhatkar/">
              <span class="text-info dark:text-blue-300">LinkedIn</span>
            </a>
          </div>
          
        </div>
        <div class="group p-6 sm:p-8 rounded-3xl bg-white border border-gray-100 dark:shadow-none dark:border-gray-700 dark:bg-gray-800 bg-opacity-50 shadow-2xl shadow-gray-600/10">
          <div class="relative overflow-hidden rounded-xl">
            <img src="/images/Govindphoto.jpg"
            alt="art cover" loading="lazy" width="1000" height="667" class="h-72 w-full object-cover transition duration-500 group-hover:scale-105"/>
          </div>
          <div class="mt-6 relative">
            <h3 class="text-2xl font-semibold text-gray-800 dark:text-white">
            Govind Khandelwal
            </h3>
            <p class="mt-6 mb-8 text-gray-600 dark:text-gray-300">
             COO
            </p>
            <a class="inline-block" target = "_blank" href="https://www.linkedin.com/in/govindnarainkhandelwal/">
              <span class="text-info dark:text-blue-300">LinkedIn</span>
            </a>
          </div>
          
        </div>
        <div class="group p-6 sm:p-8 rounded-3xl bg-white border border-gray-100 dark:shadow-none dark:border-gray-700 dark:bg-gray-800 bg-opacity-50 shadow-2xl shadow-gray-600/10">
          <div class="relative overflow-hidden rounded-xl">
            <img src="public/images/ryuyr.jpeg"
            alt="art cover" loading="lazy" width="1000" height="667" class="h-72 w-full object-cover transition duration-500 group-hover:scale-105"/>
          </div>
          <div class="mt-6 relative">
            <h3 class="text-2xl font-semibold text-gray-800 dark:text-white">
            Ryan Punamiya
            </h3>
            <p class="mt-6 mb-8 text-gray-600 dark:text-gray-300">
             COO
            </p>
            <a target = "_blank" 
            class="inline-block" href="https://www.linkedin.com/in/govindnarain-khandelwal-5621711b8/?originalSubdomain=in">
              <span class="text-info dark:text-blue-300">LinkedIn</span>
            </a>
          </div>
        </div>
      </div>
  </Container>
</div>